{
  "name": "{{APP_NAME}}",
  "version": "1.0.0",
  "type": "switch-app",
  "main": "app.mono",
  "settings": {
    "port": 8000,
    "host": "localhost",
    "workers": 1,
    "debug": true,
    "env": "development"
  },
  "paths": {
    "settings": "switch.settings",
    "src": "src",
    "static": "src/static",
    "assets": "src/assets",
    "templates": "src/templates"
  },
  "build": {
    "output": "build",
    "minify": true,
    "bundle": true,
    "sourcemap": true
  },
  "deploy": {
    "platform": "vercel",
    "env": "production"
  }
}
